{
  "name": "webdev",
  "version": "0.2.0",
  "description": "Tool zur Veranstaltungsplanung, Verwaltung von Gaestelisten und Sitzplanung",
  "main": "index.js",
  "scripts": {
    "#Allgemeine_Befehle": "echo comment ; exit",
    "start": "node index.mjs 8080",
    "gen:dist": "mkdir -p ./client/dist/ && cp -r ./client/src/assets/ ./client/dist/assets/ && cp ./client/src/index.html ./client/dist/index.html",
    "clean": "npm run clean:dist && npm run clean:node",
    "clean:dist": "rm -rf ./client/dist/",
    "clean:node": "rm -rf node_modules",
    "lint": "npm run check:semi && npm run check:less",
    "debug": "npm run gen:dist && npm run combine:js && npm run compile:less",
    "build": "npm run debug && npm run min:js && npm run min:less",
    "#weitere_zusammengesetzte_Befehle": "echo comment ; exit",
    "min": "echo run \"debug\" first! && sleep 3s && npm run min:js && npm run min:less",
    "#atomare_Befehle": "echo comment ; exit",
    "check:less": "lesshint ./client/src/styles/style.less",
    "compile:less": "lessc ./client/src/styles/style.less ./client/dist/styles/style.css",
    "min:less": "lessc --clean-css ./client/src/styles/style.less ./client/dist/styles/style.css",
    "min:js": "terser ./client/dist/main.js --compress --mangle -o ./client/dist/main.js",
    "check:semi": "semistandard --fix --verbose ./client/src/js/*.mjs ./lib/**/*.mjs ./server/**/*.mjs | snazzy",
    "combine:js": "esbuild ./client/src/js/main.mjs --log-level=warning --bundle --platform=node --outfile=./client/dist/main.js"
  },
  "dependencies": {
    "eslint": "^7.32.0",
    "express": "^4.18.2",
    "mongodb": "^4.12.1",
    "uikit": "^3.15.18"
  },
  "devDependencies": {
    "esbuild": "^0.15.18",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "lesshint": "^4.6.5",
    "semistandard": "^16.0.1",
    "snazzy": "^9.0.0",
    "terser": "^5.15.1"
  },
  "directories": {
    "doc": "doc",
    "lib": "lib",
    "client": "client",
    "server": "server"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fsi.hochschule-trier.de:webdev22/webdev22.git"
  },
  "license": "UNLICENSED",
  "author": "buchmanc, mxkl4248"
}
