{
  "name": "webdev",
  "version": "0.1.2",
  "description": "Tool zur Veranstaltungsplanung, Verwaltung von Gaestelisten und Sitzplanung",
  "main": "index.js",
  "scripts": {
    "#Allgemeine_Befehle": "echo 'comment'; exit",
    "prestart": "mkdir './client/dist/' && cp client/src/assets client/dist/assets && cp client/src/index.html /client/dist/index.html",
    "start": "node index.mjs",
    "clean": "npm run clean:dist && npm run clean:node",
    "clean:dist": "rm -rf './client/dist/'",
    "clean:node": "rm -rf './node_modules'",
    "lint": "npm run check:semi && npm run check:less",
    "debug": "npm run combine:js && npm run compile:less",
    "build": "npm run debug && npm run min:js && npm run min:less",
    "#weitere_zusammengesetzte_Befehle": "echo 'comment'; exit",
    "check": "npm run check:semi && npm run check:lint && npm run check:less",
    "min": "echo 'run \"debug\" first' && sleep 3 &&npm run min:js && npm run min:less",
    "#atomare_Befehle": "echo 'comment'; exit",
    "check:less": "lesshint './client/src/styles'",
    "compile:less": "lessc './client/src/styles/custom.less' './client/dist/styles/custom.css'",
    "min:less": "lessc --clean-css './client/src/styles/custom.less' './client/dist/styles/custom.min.css'",
    "min:js": "terser './client/dist/bundle.js' --compress --mangle -o './client/dist/bundle.min.js'",
    "check:semi": "semistandard --fix --verbose './client/src/js/*.js' './lib/**/*.js' './server/**/*.js' || snazzy",
    "combine:js": "esbuild './client/src/js/main.mjs' --log-level=warning --bundle --outfile=./client/dist/bundle.js",
    "check:lint": "eslint './index.js' './client/src/js/**' './server/** lib/**'"
  },
  "dependencies": {
    "mongodb": "^4.12.1"
  },
  "devDependencies": {
    "esbuild": "^0.15.14",
    "eslint": "^7.32.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "lesshint": "^4.6.5",
    "semistandard": "^16.0.1",
    "snazzy": "^9.0.0",
    "terser": "^5.15.1"
  },
  "directories": {
    "doc": "doc",
    "lib": "lib",
    "client": "client",
    "server": "server"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fsi.hochschule-trier.de:webdev22/webdev22.git"
  },
  "license": "UNLICENSED",
  "author": "buchmanc, mxkl4248"
}
