{
  "name": "webdev",
  "version": "0.1.2",
  "description": "Tool zur Veranstaltungsplanung, Verwaltung von Gaestelisten und Sitzplanung",
  "main": "index.js",
  "scripts": {
    "#Allgemeine_Befehle": "echo 'comment'; exit",
    "start": "node index.js",
    "clean": "npm run clean:dist && rm -rf ./node_modules",
    "lint": "semistandard --fix main.js",
    "debug": "npm run combinejs && npm run compileless",
    "build": "npm run debug && npm run minjs && npm run minless",
    "#weitere_zusammengesetzte_Befehle": "echo 'comment'; exit",
    "check": "npm run checksemi && npm run checklint && npm run checkless",
    "minall": "echo 'run \"debug\" first' && sleep 3 &&npm run minjs && npm run minless",
    "#atomare_Befehle": "echo 'comment'; exit",
    "checkless": "lesshint client/src/styles",
    "compileless": "lessc webdev22/client/src/styles/custom.less webdev22/client/dist/styles/custom.css",
    "minless": "lessc --clean-css webdev22/client/src/styles/custom.less webdev22/client/dist/styles/custom.min.css",
    "minjs": "terser client/dist/bundle.js --compress --mangle -o client/dist/bundle.min.js",
    "checksemi": "semistandard --fix --verbose main.mjs | snazzy",
    "combinejs": "esbuild client/src/js/main.mjs --log-level=warning --bundle --outfile=client/dist/bundle.js",
    "checklint": "eslint client/src/js/** server/**"
  },
  "dependencies": {
    "mongodb": "^4.12.0"
  },
  "devDependencies": {
    "esbuild": "^0.15.14",
    "eslint": "^7.32.0",
    "eslint-plugin-sonarjs": "^0.16.0",
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1",
    "lesshint": "^4.6.5",
    "semistandard": "^16.0.1",
    "snazzy": "^9.0.0",
    "terser": "^5.15.1"
  },
  "directories": {
    "doc": "doc",
    "lib": "lib",
    "client": "client",
    "server": "server"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.fsi.hochschule-trier.de:webdev22/webdev22.git"
  },
  "license": "UNLICENSED",
  "author": "buchmanc, mxkl4248"
}
